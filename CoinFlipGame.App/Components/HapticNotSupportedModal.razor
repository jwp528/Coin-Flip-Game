@* Haptic Not Supported Modal *@
<div class="haptic-modal-overlay @(IsVisible ? "visible" : "")" @onclick="OnClose">
    <div class="haptic-modal-content" @onclick:stopPropagation="true">
        <button class="haptic-modal-close" @onclick="OnClose">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        
        <div class="haptic-modal-body">
            <div class="haptic-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </div>
            
            <h3 class="haptic-title">Haptic Feedback Not Supported</h3>
            
            <p class="haptic-description">
                Your device or browser does not support haptic feedback (vibration). This feature may not be available on desktop browsers or some mobile devices.
            </p>
            
            <div class="haptic-device-info">
                <div class="device-label">Your Device:</div>
                <div class="device-value">@UserAgent</div>
            </div>
            
            <a href="@GetGitHubIssueUrl()" target="_blank" rel="noopener noreferrer" class="btn-report-issue">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span>Be a homie and let me know</span>
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    
    [Parameter]
    public EventCallback OnClose { get; set; }
    
    [Parameter]
    public string UserAgent { get; set; } = "Unknown Device";
    
    private string GetGitHubIssueUrl()
    {
        var title = Uri.EscapeDataString("Vibrate Not Supported");
        var body = Uri.EscapeDataString($"- Device: {UserAgent}");
        var labels = Uri.EscapeDataString("Haptic Support");
        
        return $"https://github.com/jwp528/Coin-Flip-Game/issues/new?title={title}&body={body}&labels={labels}";
    }
}
