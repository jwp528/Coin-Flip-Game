@using CoinFlipGame.App.Models
@using CoinFlipGame.App.Models.Unlocks
@using CoinFlipGame.App.Services
@using Microsoft.JSInterop
@implements IDisposable

<div class="coin-drawer-overlay @(IsVisible ? "visible" : "")" @onclick="OnClose">
<div class="coin-drawer @GetDrawerClasses()" @onclick:stopPropagation="true">
        <div class="drawer-handle" @onclick="OnClose">
            <div class="handle-bar"></div>
        </div>
        
        <div class="drawer-header">
            <h2 class="drawer-title">Coin Collection</h2>
            <p class="drawer-subtitle">
                <i class="bi bi-diamond-fill"></i>
                <span>Choose coin for <strong>@Side</strong></span>
                <i class="bi bi-diamond-fill"></i>
            </p>
        </div>
        
        <!-- Search Bar with Inline Counter -->
        <div class="drawer-search-section">
            <div class="drawer-search">
                <input 
                    type="text" 
                    class="drawer-search-input" 
                    placeholder="Search coins..." 
                    value="@searchQuery"
                    @oninput="OnSearchInput" />
                @if (string.IsNullOrEmpty(searchQuery))
                {
                    <i class="bi bi-search drawer-search-icon"></i>
                }
                else
                {
                    <button class="drawer-search-clear" @onclick="ClearSearch" @onclick:stopPropagation="true">
                        <i class="bi bi-x"></i>
                    </button>
                }
            </div>
            
            <div class="drawer-unlock-counter">
                <span class="unlock-counter-value">@GetUnlockedCount()</span>
                <span class="unlock-counter-separator">/</span>
                <span class="unlock-counter-total">@GetTotalCount()</span>
            </div>
        </div>
        
        <div class="drawer-content">
            @if (AvailableCoins != null)
            {
                <!-- Felt-lined coin case -->
                <div class="coin-case">
                    <!-- Random Option First -->
                    <div class="coin-case-slot @(IsRandomSelected ? "selected" : "")" @onclick="HandleRandomSelection">
                        <div class="coin-slot-inner">
                            <div class="coin-display random-coin">
                                <img src="@RANDOM_COIN_IMAGE" alt="Random" class="coin-image" />
                            </div>
                            @if (IsRandomSelected)
                            {
                                <div class="coin-selected-badge">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                </div>
                            }
                        </div>
                        <div class="coin-slot-label">Random</div>
                    </div>
                    
                    <!-- Regular Coins -->
                    @foreach (var coinTypeGroup in AvailableCoins.Where(ct => ct.Value.Any()))
                    {
                        var filteredCoins = coinTypeGroup.Value
                            .Where(c => c.UnlockCondition != null || c.Effect != null) // Only show mapped coins
                            .Where(MatchesSearch)
                            .ToList();
                        
                        @if (filteredCoins.Any())
                        {
                            @foreach (var coin in filteredCoins)
                            {
                                var isUnlocked = UnlockProgress.IsUnlocked(coin);
                                var landCount = UnlockProgress.GetCoinLandCount(coin.Path);
                                var isSelected = IsSelectedCoin(coin.Path);
                            
                            <div class="coin-case-slot @(isUnlocked ? "" : "locked") @(isSelected ? "selected" : "")" 
                                 @onpointerdown="@(() => HandleCoinPointerDown(coin, isUnlocked))"
                                 @onpointerup="HandleCoinPointerUp"
                                 @onpointercancel="HandleCoinPointerCancel">
                                <div class="coin-slot-inner">
                                    <div class="coin-display">
                                        @if (isUnlocked)
                                        {
                                            <img src="@coin.Path" alt="@coin.DisplayName" class="coin-image" />
                                            @if (landCount > 0)
                                            {
                                                <div class="coin-badge">@landCount</div>
                                            }
                                            @if (coin.Effect != null)
                                            {
                                                <div class="coin-effect-badge @GetEffectBadgeClass(coin.Effect.Type)" title="@coin.Effect.Description">
                                                    @((MarkupString)GetEffectIcon(coin.Effect.Type))
                                                </div>
                                            }
                                            @if (isSelected)
                                            {
                                                <div class="coin-selected-badge">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                                                        <polyline points="20 6 9 17 4 12"></polyline>
                                                    </svg>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <img src="@coin.Path" alt="@coin.DisplayName" class="coin-image silhouette" />
                                            <div class="coin-locked-icon">
                                                <span class="lock-question">?</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="coin-slot-label">@GetShortName(coin.DisplayName)</div>
                            </div>
                            }
                        }
                    }
                </div>
            }
            else
            {
                <div class="drawer-loading">
                    <div class="loading-spinner"></div>
                    <p>Loading coins...</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Unlock Info Dialog -->
<UnlockInfoDialog 
    IsVisible="@showUnlockInfo" 
    CoinImage="@selectedLockedCoin"
    OnClose="@CloseUnlockInfo" />
