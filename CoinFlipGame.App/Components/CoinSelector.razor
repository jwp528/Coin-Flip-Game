@using CoinFlipGame.App.Models
@using CoinFlipGame.App.Models.Unlocks
@using CoinFlipGame.App.Services

<div class="coin-selector-overlay @(IsVisible ? "visible" : "")" @onclick="OnClose">
    <div class="coin-selector-modal" @onclick:stopPropagation="true">
        <div class="coin-selector-header">
            <h2 class="coin-selector-title">
                Choose @(Side == "heads" ? "Heads" : "Tails") Coin
            </h2>
            <button class="coin-selector-close" @onclick="OnClose">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        
        <div class="coin-selector-content">
            @if (AvailableCoins != null)
            {
                <!-- Random Option Section -->
                <div class="coin-type-section">
                    <h3 class="coin-type-header">
                        <span class="coin-type-category">Special</span>
                        <span class="coin-type-divider">/</span>
                        <span class="coin-type-name">Random</span>
                    </h3>
                    
                    <div class="coin-grid">
                        <div class="coin-option @(IsRandomSelected ? "selected" : "")" @onclick="HandleRandomSelection">
                            <div class="coin-option-image-wrapper">
                                <div class="random-coin-placeholder">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                    </svg>
                                </div>
                                @if (IsRandomSelected)
                                {
                                    <div class="coin-selected-indicator">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                    </div>
                                }
                            </div>
                            <div class="coin-option-name">Random</div>
                        </div>
                    </div>
                </div>
                
                @foreach (var coinTypeGroup in AvailableCoins.Where(ct => ct.Value.Any()))
                {
                    <div class="coin-type-section">
                        <h3 class="coin-type-header">
                            <span class="coin-type-category">@coinTypeGroup.Key.Category</span>
                            <span class="coin-type-divider">/</span>
                            <span class="coin-type-name">@coinTypeGroup.Key.Name</span>
                        </h3>
                        
                        <div class="coin-grid">
                            @foreach (var coin in coinTypeGroup.Value)
                            {
                                var isUnlocked = UnlockProgress.IsUnlocked(coin);
                                var landCount = UnlockProgress.GetCoinLandCount(coin.Path);
                                var isSelected = IsSelectedCoin(coin.Path);
                                var isExpanded = expandedCoinPath == coin.Path;
                                
                                <div class="coin-option @(isUnlocked ? "" : "locked") @(isSelected ? "selected" : "") @(isExpanded ? "expanded" : "")" 
                                     @onclick="@(() => HandleCoinClick(coin, isUnlocked))"
                                     @onmouseenter="@((MouseEventArgs e) => HandleCoinHover(coin, e, true))"
                                     @onmouseleave="@(() => HideTooltip())">
                                    <div class="coin-option-image-wrapper">
                                        <img src="@coin.Path" alt="@coin.DisplayName" class="coin-option-image @(isUnlocked ? "" : "grayscale")" />
                                        
                                        @if (isUnlocked)
                                        {
                                            @if (isSelected)
                                            {
                                                <div class="coin-selected-indicator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                                                        <polyline points="20 6 9 17 4 12"></polyline>
                                                    </svg>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="coin-option-overlay">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                                                        <polyline points="20 6 9 17 4 12"></polyline>
                                                    </svg>
                                                </div>
                                            }
                                            
                                            @if (landCount > 0)
                                            {
                                                <div class="coin-land-count">@landCount</div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="coin-locked-overlay">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                                </svg>
                                            </div>
                                        }
                                    </div>
                                    <div class="coin-option-name">@coin.DisplayName</div>
                                    
                                    @if (!isUnlocked && coin.UnlockCondition != null && isExpanded)
                                    {
                                        <div class="coin-unlock-details">
                                            <div class="unlock-description">@coin.UnlockCondition.Description</div>
                                            <div class="unlock-progress-inline">
                                                <div class="progress-bar-container">
                                                    <div class="progress-bar-fill" style="width: @(CalculateProgressPercentage(coin))%"></div>
                                                </div>
                                                <div class="progress-text">@UnlockProgress.GetProgressDescription(coin)</div>
                                            </div>
                                        </div>
                                    }
                                    else if (!isUnlocked && coin.UnlockCondition != null)
                                    {
                                        <div class="coin-unlock-progress">@UnlockProgress.GetProgressDescription(coin)</div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="coin-selector-loading">
                    <div class="loading-spinner"></div>
                    <p>Loading coins...</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Unlock Tooltip - Only show on desktop -->
<div class="tooltip-desktop-only">
    <UnlockTooltip 
        IsVisible="@showTooltip"
        CoinImage="@hoveredCoin"
        ProgressText="@tooltipProgressText"
        ProgressPercentage="@tooltipProgressPercentage"
        X="@tooltipX"
        Y="@tooltipY" />
</div>
