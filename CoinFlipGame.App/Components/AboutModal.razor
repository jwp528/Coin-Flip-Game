@using Blazored.LocalStorage
@implements IDisposable

@inject ILocalStorageService LocalStorage
@inject IJSRuntime JSRuntime

<div class="about-modal-overlay @(IsVisible ? "visible" : "")" @onclick="OnClose">
    <div class="about-modal-content" @onclick:stopPropagation="true">
        <button class="about-modal-close" @onclick="OnClose">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        
        <div class="about-modal-body">
            <div class="about-header">
                <div class="about-icon">?</div>
                <h2 class="about-title">About Coin Flip Game</h2>
            </div>
            
            <p class="about-description">
                A nice idle coin flip animation with sound. Play at your own pace.
            </p>
            
            <p class="about-instructions">
                Click either of the coin counters at the top to change the face of that coin. By default it's set to random.
            </p>
            
            <p class="about-github-info">
                I built an unlock system to make it more interesting. Check that out and more on my GitHub:
            </p>
            
            <div class="about-links">
                <a href="https://github.com/jwp528/Coin-Flip-Game" target="_blank" rel="noopener noreferrer" class="about-link-icon" title="View on GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
            </div>
            
            <div class="about-danger-zone">
                <h3 class="danger-zone-title">Danger Zone</h3>
                <p class="danger-zone-description">This action cannot be undone. All your progress, unlocked coins, and statistics will be permanently deleted.</p>
                <button class="btn-clear-data" @onclick="HandleClearData" disabled="@isClearing">
                    @if (isClearing)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span>Clearing...</span>
                    }
                    else if (showClearConfirm)
                    {
                        <span>Click again to confirm</span>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg>
                        <span>Clear All Data</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    
    [Parameter]
    public EventCallback OnClose { get; set; }
    
    [Parameter]
    public EventCallback OnDataCleared { get; set; }
    
    private bool showClearConfirm = false;
    private bool isClearing = false;
    private CancellationTokenSource? confirmCancellation;
    
    private async Task HandleClearData()
    {
        if (!showClearConfirm)
        {
            // First click - show confirm state
            showClearConfirm = true;
            StateHasChanged();
            
            // Reset confirmation after 3 seconds
            confirmCancellation?.Cancel();
            confirmCancellation = new CancellationTokenSource();
            
            try
            {
                await Task.Delay(3000, confirmCancellation.Token);
                showClearConfirm = false;
                StateHasChanged();
            }
            catch (TaskCanceledException)
            {
                // Expected when user clicks again
            }
            
            return;
        }
        
        // Second click - actually clear data
        isClearing = true;
        showClearConfirm = false;
        StateHasChanged();
        
        try
        {
            await LocalStorage.ClearAsync();
            await JSRuntime.InvokeVoidAsync("location.reload");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error clearing data: {ex.Message}");
            isClearing = false;
            StateHasChanged();
        }
    }
    
    public void Dispose()
    {
        confirmCancellation?.Cancel();
        confirmCancellation?.Dispose();
    }
}
